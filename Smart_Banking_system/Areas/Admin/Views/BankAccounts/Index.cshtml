@model IEnumerable<Smart_Banking_system.Models.BankAccount>

@{
    ViewData["Title"] = "BankAccount List";
}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-content-center mb-4">
        <h2 class="text-primary fw-bold">
            <i class="bi bi-cash-stack me-2"></i> BankAccount Management
        </h2>
        <a asp-action="CreateOrEdit" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-circle me-1"></i>Add New BankAccount
        </a>
    </div>


    <div class="table-responsive shadow-sm">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-dark table-center">
                <tr>
                    <th>#</th>
                    <th>AccountNumber</th>
                    <th>AccountHolderName</th>
                    <th>Balance</th>
                    <th>AccountType</th>
                    <th>CreatedAt</th>
                    <th style="width:160px;">Actions</th>
                </tr>
            </thead>

            <tbody>
                @{
                    int count = 1;
                }

                @foreach (var bankAccount in Model)
                {
                    <tr>
                        
                        <td>@bankAccount.Id</td>
                        <td>@bankAccount.AccountNumber</td>
                        <td>@bankAccount.AccountHolderName</td>
                        <td>@bankAccount.Balance</td>
                        <td>@bankAccount.AccountType</td>
                        <td>@bankAccount.CreatedAt.ToString("dd-MM-yyyy")</td>

                        <td class="text-center">
                            <div class="d-flex">
                                <a asp-action="Details"
                                   asp-route-id="@bankAccount.Id"
                                   class="btn btn-outline-info btn-sm me-1">
                                    <i class="bi bi-eye"></i>
                                </a>

                                <a asp-action="CreateOrEdit"
                                   asp-route-id="@bankAccount.Id"
                                   class="btn btn-outline-primary btn-sm me-1">
                                    <i class="bi bi-pencil-square"></i>
                                </a>

                                <form method="post"
                                      asp-action="Delete"
                                      asp-route-id="@bankAccount.Id"
                                      onsubmit="return confirm('Are you sure you want to delete this?')">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>

                    count++;
                }
            </tbody>
        </table>
    </div>
</div>



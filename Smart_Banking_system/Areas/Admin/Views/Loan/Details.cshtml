@model Smart_Banking_system.Models.Loan

@{
    ViewData["Title"] = "Loan Details";
}

<div class="container mt-5 mb-5 ">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9 ">
            <div class="card shadow-lg border-0 rounded-4 bg-secondary">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>Loan Details
                    </h4>
                    <a asp-action="Index" class="btn btn-light btn-sm">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>

                <div class="card-body p-4">
                    <dl class="row mb-3">
                        <dt class="col-sm-4 fw-semibold">LoanType:</dt>
                        <dd class="col-sm-8">@Model.LoanType</dd>

                        <dt class="col-sm-4 fw-semibold">LoanAmount:</dt>
                        <dd class="col-sm-8">@Model.LoanAmount</dd>

                        <dt class="col-sm-4 fw-semibold">InterestRate:</dt>
                        <dd class="col-sm-8">@Model.InterestRate</dd>

                        <dt class="col-sm-4 fw-semibold">IssueDate:</dt>
                        <dd class="col-sm-8">@Model.IssueDate.ToString("dd MMM yyyy")</dd>

                        <dt class="col-sm-4 fw-semibold">DueDate:</dt>
                        <dd class="col-sm-8">@Model.DueDate.ToString("dd MMM yyyy")</dd>

                        <dt class="col-sm-4 fw-semibold">IssueDate:</dt>
                        <dd class="col-sm-8">@Model.Status</dd>


                    </dl>

                    <div class="d-flex justify-content-end mt-4">
                        <a asp-action="CreateOrEdit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                            <i class="bi bi-pencil-square me-1"></i> Edit
                        </a>
                        <form class="m-1" method="post" asp-action="Delete" asp-route-id="@Model.Id" onclick="return confirm('Are You Sure Delete this Data')">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@model IEnumerable<Smart_Banking_system.Models.AccountType>

@{
    ViewData["Title"] = "AccountType List";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">
            <i class="bi bi-cash-stack me-2"></i> Account Types
        </h2>

        <a asp-action="CreateOrEdit" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> Add New AccountType
        </a>
    </div>

    <div class="table-responsive shadow-sm">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>#</th>
                    <th>Type Name</th>
                    <th>Description</th>
                    <th style="width:160px;">Actions</th>
                </tr>
            </thead>

            <tbody>
                @{
                    int count = 1;
                }

                @foreach (var accountType in Model)
                {
                    <tr>
                        <td class="text-center">@count</td>
                        <td>@accountType.TypeName</td>
                        <td>@accountType.Description</td>

                        <td class="text-center">
                            <div class="d-flex justify-content-center gap-1">
                                <a asp-action="Details"
                                   asp-route-id="@accountType.Id"
                                   class="btn btn-outline-info btn-sm">
                                    <i class="bi bi-eye"></i>
                                </a>

                                <a asp-action="CreateOrEdit"
                                   asp-route-id="@accountType.Id"
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-pencil-square"></i>
                                </a>

                                <form method="post"
                                      asp-action="Delete"
                                      asp-route-id="@accountType.Id"
                                      onsubmit="return confirm('Are you sure you want to delete this?')">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    count++;
                }
            </tbody>
        </table>
    </div>
</div>

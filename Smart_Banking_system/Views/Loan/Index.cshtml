@model IEnumerable<Smart_Banking_system.Models.Loan>

@{
    ViewData["Title"] = "Loan List";
}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-content-center mb-4">
        <h2 class="text-primary fw-bold">
            <i class="bi bi-cash-stack me-2"></i> Loan
        </h2>
        <a asp-action="CreateOrEdit" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-circle me-1"></i>Add New Loan
        </a>
    </div>


    <div class="table-responsive shadow-sm">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-dark table-center">
                <tr>
                    <th>#</th>
                    <th>LoanType</th>
                    <th>LoanAmount</th>
                    <th>InterestRate</th>
                    <th>IssueDate</th>
                    <th>DueDate</th>
                    <th>Status</th>

                    <th style="width:160px;">Actions</th>
                </tr>
            </thead>

            <tbody>
                @{
                    int count = 1;
                }

                @foreach (var loan in Model)
                {
                    <tr>
                        <td class="text-center">@count</td>
                        <td>@loan.LoanType</td>
                        <td>@loan.LoanAmount</td>
                        <td>@loan.InterestRate</td>
                        <td>@loan.IssueDate.ToString("dd-MM-yyyy")</td>
                        <td>@loan.DueDate.ToString("dd-MM-yyyy")</td>
                        <td>@loan.Status</td>

                        <td class="text-center">
                            <div class="d-flex">
                                <a asp-action="Details"
                                   asp-route-id="@loan.Id"
                                   class="btn btn-outline-info btn-sm me-1">
                                    <i class="bi bi-eye"></i>
                                </a>

                                <a asp-action="CreateOrEdit"
                                   asp-route-id="@loan.Id"
                                   class="btn btn-outline-primary btn-sm me-1">
                                    <i class="bi bi-pencil-square"></i>
                                </a>

                                <form method="post"
                                      asp-action="Delete"
                                      asp-route-id="@loan.Id"
                                      onsubmit="return confirm('Are you sure you want to delete this?')">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>

                    count++;
                }
            </tbody>
        </table>
    </div>
</div>



